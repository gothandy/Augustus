@model Opportunity
@{
    var account = (Account)ViewBag.Account;
    var accounts = (IEnumerable<Account>)ViewBag.Accounts;

}

<ol class="breadcrumb">
    <li><a href="@Url.Action("ActiveAccounts", "Organization")">True Clarity</a></li>
    <li>@Html.ActionLink(account.Name, "Opportunities", "Account", new { id = account.Id }, null)</li>
</ol>

    @using (Html.BeginForm())
    {
        //@Html.AntiForgeryToken()

        <div class="well">
            <div class="form-horizontal">
                @Html.ValidationSummary(true)

                <div class="form-group">
                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.AccountId, "Account", new { @class = "control-label" })
                    </div>
                    <div class="col-sm-6">
                        @Html.DropDownListFor(
                            model => model.AccountId,
                            new SelectList(accounts, "Id", "Name", account.Id),
                            new { @class = "form-control selectpicker" }
                        )
                    </div>
                    <div class="col-sm-4">
                        @Html.ValidationMessageFor(model => model.AccountId, null, new { @class = "help-block text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.Name, new { @class = "control-label" })
                    </div>
                    <div class="col-sm-6">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="col-sm-4">
                        @Html.ValidationMessageFor(model => model.Name, null, new { @class = "help-block text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <div>
            <input type="submit" value="Save" class="btn btn-primary" />


            @if (Model != null)
                {
                <a href="@Url.Action("Invoices", new { Id = Model.Id })" class="btn btn-default">Cancel</a>
                    <a href="@Url.Action("Delete", new { Id = Model.Id })" class="btn btn-danger pull-right">Delete</a>
            }
            else
            {
                <a href="@Url.Action("Opportunities", "Account", new { id = account.Id })" class="btn btn-default">Cancel</a>
            }
        </div>
    }




