@model Opportunity
@{
    var account = (Account)ViewBag.Account;
    var formButtons = new FormButtons
    {
        CancelUrl = @Url.Action("Opportunities", "Account", new { id = account.Id })
    };
}

@Html.Partial("Breadcrumb", account)

@using (Html.BeginForm())
{
    @Html.Partial("Form", Model, ViewData)

    @Html.Partial("CreateButtons", formButtons)
}
