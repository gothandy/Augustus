@model Opportunity
@{
    ViewBag.Title = "New Opportunity";
    var accountId = (Guid)ViewBag.AccountId;
    var accounts = (IEnumerable<Account>)ViewBag.Accounts;
}

@using (Html.BeginForm())
{
    //@Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true)

        <div class="form-group">
            <div class="col-xs-2">
                @Html.LabelFor(model => model.AccountId, "Account", new { @class = "control-label" })
            </div>
            <div class="col-xs-6">
                @Html.DropDownListFor(
                    model => model.AccountId,
                    new SelectList(accounts, "Id", "Name"),
                    new { @class = "selectpicker" }
                )
            </div>
            <div class="col-xs-4">
                @Html.ValidationMessageFor(model => model.AccountId, null, new { @class = "help-block text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-xs-2">
                @Html.LabelFor(model => model.Name, new { @class = "control-label" })
            </div>
            <div class="col-xs-6">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            <div class="col-xs-4">
                @Html.ValidationMessageFor(model => model.Name, null, new { @class = "help-block text-danger" })
            </div>
        </div>

        <div class="button-group">
                <input type="submit" value="Create" class="btn btn-default" />
            <a href="@Url.Action("Index")" class="btn">Cancel</a>
        </div>
    </div>
}



