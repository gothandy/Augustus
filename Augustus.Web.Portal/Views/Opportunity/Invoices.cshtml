@model IEnumerable<Invoice>
@{
    var account = (Account)ViewBag.Account;
    var opportunity = (Opportunity)ViewBag.Opportunity;

    ViewBag.Title = opportunity.Name;
}
<ol class="breadcrumb">
    <li><a href="@Url.Action("ActiveAccounts", "Organization")">True Clarity</a></li>
    <li>@Html.ActionLink(account.Name, "Invoices", "Account", new { id = account.Id }, null)</li>
</ol>

@if (Model.Count() == 0)
{
    <div class="well-sm">
        <p>No invoices</p>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Name</th>
                    <th class="currency">Margin</th>
                    <th class="currency">Revenue</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model)
                {
                    <tr>
                        <td>@DateTimeHelper.Format(i.InvoiceDate)</td>
                        <td>@Html.ActionLink(i.Name, "Details", "Invoice", new { id = i.Id }, null)</td>
                        <td class="currency">@CurrencyHelper.Format(i.Margin)</td>
                        <td class="currency">@CurrencyHelper.Format(i.Revenue)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<div>
    <a class="btn btn-default" href="@Url.Action("Create", "Invoice")">Create Invoice</a>
    <a class="btn btn-default pull-right" href="@Url.Action("Edit", new { id = opportunity.Id })">Edit Opportunity</a>
</div>

