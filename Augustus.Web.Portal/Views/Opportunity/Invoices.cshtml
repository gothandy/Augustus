@model Opportunity
@{
    
}

@if (Model.Invoices.Count() == 0)
{
    <div class="well-sm">
        <p>No invoices</p>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Name</th>
                    <th class="currency">Margin</th>
                    <th class="currency">Revenue</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model.Invoices)
                {

                    if (i.Name == null) { i.Name = "null"; }

                    <tr>
                        <td>@DateTimeHelper.Format(i.InvoiceDate)</td>
                        <td>@Html.ActionLink(i.Name, "Details", "Invoice", new { id = i.Id }, null)</td>
                        <td class="currency">@CurrencyHelper.Format(i.Margin)</td>
                        <td class="currency">@CurrencyHelper.Format(i.Revenue)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<div class="btn-group">
    <a class="btn btn-default" href="@Url.Action("Create", "Invoice", new { id = Model.Id })">Create Invoice</a>
</div>
<div class="btn-group pull-right">
    <a class="btn btn-default" href="@Url.Action("Edit", new { id = Model.Id })">Edit Opportunity</a>
</div>

