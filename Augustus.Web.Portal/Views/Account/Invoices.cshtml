@model IEnumerable<Invoice>
@{
    var account = (Account)ViewBag.Account;
    ViewBag.Title = account.Name;
}

<ol class="breadcrumb">
    <li><a href="@Url.Action("ActiveAccounts", "Organization")">True Clarity</a></li>
</ol>

<ul class="nav nav-tabs">
    <li role="presentation" class="active"><a href="@Url.Action("Invoices", new { id = account.Id })">Invoices</a></li>
    <li role="presentation"><a href="@Url.Action("Opportunities", new { id = account.Id })">Opportunities</a></li>
</ul>

<div class="well-sm">
    @if (Model.Count() == 0)
    {
        <div class="well-sm">
            <div class="panel">No invoices</div>
        </div>
    }
    else
    {

        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Name</th>
                        <th class="currency">Margin</th>
                        <th class="currency">Revenue</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var i in Model)
                {
                        <tr>
                            <td>@DateTimeHelper.Format(i.InvoiceDate)</td>
                            <td>@Html.ActionLink(i.Name, "Details", "Invoice", new { id = i.Id }, null)</td>
                            <td class="currency">@CurrencyHelper.Format(i.Margin)</td>
                            <td class="currency">@CurrencyHelper.Format(i.Revenue)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    }
</div>

<div>
    <a class="btn btn-default" href="@Url.Action("Create", "Invoice", new { id = account.Id })">Create Invoice</a>
    <a class="btn btn-default pull-right" href="@Url.Action("Edit", "Account", new { id = account.Id })">Edit Account</a>
</div>
