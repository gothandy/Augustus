@model AccountReadViewModel

<ul class="nav nav-tabs">
    <li role="presentation"><a href="@Url.Action("Invoices", new { id = Model.Account.Id })">Invoices</a></li>
    <li role="presentation" class="active"><a href="@Url.Action("Opportunities", new { id = Model.Account.Id })">Opportunities</a></li>
</ul>

@if (Model.Account.Opportunities.Count() == 0)
{
    <div class="well-sm">
        <div class="panel">No opportunities.</div>
    </div>
}
else
{
    <div class="well-sm">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var i in Model.Account.Opportunities)
                {
                    <tr>
                        <td>@Html.ActionLink((i.Name == null ? "Null" : i.Name), "Invoices", "Opportunity", new { id = i.Id }, null)</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
}

<div class="btn-group">
    @Html.DisplayFor(m => m.CreateButton)
</div>
<div class="btn-group pull-right">
    @Html.DisplayFor(m => m.EditButton)
</div>
