@model IEnumerable<Opportunity>
@{
    var account = (Account)ViewBag.Account;
    ViewBag.Title = account.Name;
}
@if (Model.Count() == 0)
{
    <div class="panel">No opportunities.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(i.Name, "Invoices", "Opportunity", new { id = i.Id }, null)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<div class="btn-group">
    <a class="btn" href="@Url.Action("Invoices", new { id = account.Id })">View Invoices</a>
    <a class="btn" href="@Url.Action("Edit", new { id = account.Id })">Edit Account</a>
    <a class="btn" href="@Url.Action("Delete", new { id = account.Id })">Delete Account</a>
    <a class="btn" href="@Url.Action("Create", "Invoice", new { id = account.Id })">Create Invoice</a>
    <a class="btn" href="@Url.Action("Create", "Opportunity", new { id = account.Id })">Create Opportunity</a>
</div>
