@model MonthlyReportViewModel

<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Month</th>
                <th class="currency">Invoice</th>
                <th class="currency">Work Done</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model.Months)
            {
                <tr>
                    <td><a href="/Reporting/Month/@m.Month.Year/@m.Month.Month">@DateTimeHelper.Format(m.Month)</a></td>
                    <td class="currency">@CurrencyHelper.Format(m.Invoice)</td>
                    <td class="currency">@CurrencyHelper.Format(m.WorkDone)</td>
                </tr>
            }
        </tbody>
    </table>
</div>



