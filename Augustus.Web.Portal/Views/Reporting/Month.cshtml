@model ReportMonthViewModel

<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Account</th>
                <th class="currency">Invoice Total</th>
                <th class="currency">Work Done And Invoiced</th>
                <th class="currency">Work Done Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model.Accounts)
            {
                <tr>
                    <td><a href="/Reporting/Account/@Model.Year/@Model.Month/@m.AccountId">@m.AccountName</td>
                    <td class="currency">@CurrencyHelper.Format(m.InvoiceTotal)</td>
                    <td class="currency">@CurrencyHelper.Format(m.WorkDoneAndInvoiced)</td>
                    <td class="currency">@CurrencyHelper.Format(m.WorkDoneTotal)</td>
                </tr>
            }
        </tbody>
    </table>
</div>

