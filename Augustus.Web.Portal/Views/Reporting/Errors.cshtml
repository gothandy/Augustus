@model ReportErrorsViewModel

<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Invoice Date</th>
                <th>Invoice Name</th>
                <th class="currency">Invoice Margin</th>
                <th class="currency">Work Done Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model.Invoices)
            {
                <tr>
                    <td>@DateTimeHelper.Format(m.InvoiceDate)</td>
                    <td>@Html.ActionLink(m.InvoiceName, "Details", "Invoice", new { id = m.InvoiceId }, null)</td>
                    <td class="currency">@CurrencyHelper.Format(m.Margin)</td>
                    <td class="currency">@CurrencyHelper.Format(m.WorkDone)</td>
                </tr>
            }
        </tbody>
    </table>
</div>

