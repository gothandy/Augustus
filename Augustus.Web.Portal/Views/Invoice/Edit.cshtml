@model Invoice
@{
    ViewBag.Title = "Edit Invoice";

    var formButtons = new FormButtons
    {
        Id = Model.Id,
        CancelUrl = @Url.Action("Details", new { Id = Model.Id })
    };
}

@Html.Partial("Breadcrumb", Model)

@using (Html.BeginForm())
{
    @Html.Partial("Form", Model, ViewData)

    @Html.Partial("EditButtons", formButtons)
}


